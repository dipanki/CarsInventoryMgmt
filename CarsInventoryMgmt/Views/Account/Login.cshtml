@model CarsInventoryMgmt.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}
<section class="stories">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                    <div class="popup_heding">
                        <h2>Log In</h2>
                    </div>
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="popup_txt_grp">
                            @Html.LabelFor(m => m.UserName)
                            @Html.TextBoxFor(m => m.UserName, new { @class = "popup_txt" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                        <div class="popup_txt_grp">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "popup_txt" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <div class="popup_txt_grp">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                        </div>
                            <input type="submit" value="Log in" class="comm-btn"/>
                        <p>
                            @Html.ActionLink("Register", "Register", new { @class = "forgot_pass_link" }) if you don't have an account.
                        </p>
                    }
            </div>
        </div>
        </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
